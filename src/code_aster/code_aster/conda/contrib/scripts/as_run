set_prefix() {
    local this=`readlink -n -f "$1"`
    local bin=`dirname "${this}"`
    prefix=`dirname "${bin}"`
}

set_prefix "$0"

ASTER_ROOT="${prefix}"
export ASTER_ROOT

if [ -z "${ASTER_ETC}" ]; then
    ASTER_ETC="${ASTER_ROOT}"/etc
    if [ "${ASTER_ROOT}" = "/usr" ]; then
        ASTER_ETC=/etc
    fi
    export ASTER_ETC
fi

# set environment
if [ -f "${ASTER_ETC}"/codeaster/profile.sh ]; then
    . "${ASTER_ETC}"/codeaster/profile.sh
fi

# start Python interpreter
if [ -z "${PYTHONEXECUTABLE}" ]; then
    PYTHONEXECUTABLE=python3
fi

# remove '-c' : sys.argv[0]
"${PYTHONEXECUTABLE}" -c 'import sys, asrun ; from asrun.main import main,start; del sys.argv[0]; main()' "$0" "$@"